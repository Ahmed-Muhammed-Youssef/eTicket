@using mvc.Data.Static;
@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Users";
}

<table class="table table-hover container">
    <thead class="text-center">
        <tr>
            <th scope="col">
                Id
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Phone
            </th>
            <th scope="col">
                Email
            </th>
            <th scope="col">
                Username
            </th>
            @if (User.Identity!.IsAuthenticated && User.IsInRole(UserRolesValues.Admin))
            {
                <th scope="col" class="col-2">
                    Actions
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="text-center align-middle clickable-table-row" onclick="window.location.href = '@Url.Action("Details")/@user.Id';">
                <td >
                    @user.Id
                </td>
                <td>
                    @user.FullName
                </td>
                <td>
                    @user.PhoneNumber
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.UserName
                </td>
                <td class="align-middle">
                    @* <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">
                        <i class="bi bi-trash"></i>
                    </a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
