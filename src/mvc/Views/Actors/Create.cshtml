@model ActorVM
@{
    ViewData["Title"] = "Actors";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Add a New Actor
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form enctype="multipart/form-data" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
                    <div class="form-group text-center my-2">
                        <img class="rounded-circle" style="max-width: 150px;" id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="ImageFile" class="form-label">Actor's image</label>
                        <input asp-for="ImageFile" id="imgInp" accept="image/*" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <input type="submit" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        imgInp.onchange = evt => {
            const [file] = imgInp.files
            if (file) {
                ProfilePicturePreview.src = URL.createObjectURL(file)
            }
        }
    </script>
}