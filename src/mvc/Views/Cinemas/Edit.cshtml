@model Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Edit Cinema
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group text-center my-2">
                        <img class="rounded-circle" style="max-width: 150px;" id="LogoPreview" />
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Logo" class="control-label">
                        </label>
                        <input asp-for="Logo" value=@Model.Logo class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Name" class="control-label">
                        </label>
                        <input asp-for="Name" value=@Model.Name class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <label asp-for="Description" class="control-label">
                        </label>
                        <input asp-for="Description" value=@Model.Description class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group my-2">
                        <input value="Save" type="submit" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#LogoPreview").val();
        })
        $("#LogoPreview").on("change", function () {
            var output = document.getElementById('LogoPreview');
            output.src = $(this).val();
        })
    </script>
}
