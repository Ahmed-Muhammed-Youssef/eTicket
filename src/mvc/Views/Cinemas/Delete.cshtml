@model Cinema
@{
    ViewData["Title"] = "Delete actor";
}

<p class="form-group text-center">
    <h2>
        Delete confirmation for @Model.Name Cinema
    </h2>
</p>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center my-2">
                    <img class="rounded-circle" style="max-width: 150px;" src=@Model.Logo />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Logo" class="control-label">
                    </label>
                    <input asp-for="Logo" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Name" class="control-label">
                    </label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Description" class="control-label">
                    </label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
