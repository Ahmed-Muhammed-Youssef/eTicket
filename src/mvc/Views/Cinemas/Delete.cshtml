@model Cinema
@{
    ViewData["Title"] = "Delete cinema";
}

<div class="form-group text-center">
    <h2>
        Are you sure you want to delete the following cinema?
    </h2>
</div>
<div class="container">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
        <div class="form-group text-center my-2">
            <img class="rounded-circle" style="width: 200px;height: 200px; object-fit:cover;" src="~/@Model.Image.ImagePath" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Name" class="control-label">Full Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group my-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" readonly />
        </div>
        <div class="form-group my-2">
            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
