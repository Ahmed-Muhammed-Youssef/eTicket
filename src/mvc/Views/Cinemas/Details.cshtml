@using mvc.Data.Static;
@model Cinema
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h2>
        @Model.Name
    </h2>
</div>
<div class="container">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
        <div class="form-group text-center my-2">
            <img class="rounded-circle" style="width: 300px; height: 300px; object-fit: cover;" src="~/@Model.Image.ImagePath" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Name" class="control-label">Full Name</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group my-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" readonly />
        </div>
        <div class="form-group my-2">
            @if (User.Identity!.IsAuthenticated && User.IsInRole(UserRolesValues.Admin))
            {
                <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            }
            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
        </div>
    </div>
</div>
