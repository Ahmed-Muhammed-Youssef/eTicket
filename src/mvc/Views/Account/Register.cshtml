@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="text-center form-signin mt-5">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span class=""><b> @TempData["Error"] </b></span>
        </div>
    }
    <form method="post" asp-action="Register" class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-10 offset-sm-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1 class="h3 mb-3 fw-normal">Please fill the following fields</h1>
        <div class="form-floating">
            <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName">
            <label asp-for="FirstName">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="LastName" type="text" class="form-control" placeholder="LastName">
            <label asp-for="LastName">Last Name</label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating my-2">
            <input asp-for="UserName" type="text" class="form-control" placeholder="UserName">
            <label asp-for="UserName">User name</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mt-2">
            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="">
            <label asp-for="PhoneNumber">Phone Number</label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-floating my-2">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-2">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Password">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>

    </form>
</div>