@model IEnumerable<mvc.Models.Actor>
@{
    ViewData["Title"] = "Actors";
}
<div style="z-index: 1;" class="position-fixed shadow bottom-0 end-0 mb-4 me-4">
    <a asp-controller="Actors" asp-action="Create" class="w-auto btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>Add new actor
    </a>
</div>
<div class="row">
    <h3 class="col">
        Actors
    </h3>
</div>
<table class="table">
    <thead class="text-center">
        <tr>
            <th>
               Picture
            </th>
            <th>
                Full Name
            </th>
            <th>
                Bio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img class="rounded-circle" src=@item.ProfilePictureUrl>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i>Edit
                </a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                    <i class="bi bi-eye"></i> Details
                </a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi bi-trash"></i>Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
