@using mvc.Data.Static;
@model Cinema
@{
    ViewData["Title"] = "Details";
}

<p class="form-group text-center">
    <h2>
        @Model.Name 's Details
    </h2>
</p>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center my-2">
                    <img class="rounded-circle" style="max-width: 150px;" src=@Model.Logo />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Logo" class="control-label">
                    </label>
                    <input asp-for="Logo" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Name" class="control-label">
                    </label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Description" class="control-label">
                    </label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    @if (User.Identity!.IsAuthenticated && User.IsInRole(UserRolesValues.Admin))
                    {
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
