@model IEnumerable<mvc.Models.Producer>

@{
    ViewData["Title"] = "Producers";
}

<h1>Producers</h1>

<table class="table">
    <thead class="text-center">
        <tr>
            <th>
                Picture
            </th>
            <th>
                Full Name
            </th>
            <th>
                Bio
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img style="width: 100px;" class="rounded-circle" src=@item.ProfilePictureUrl>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                    <i class="bi bi-pencil-square"></i>Edit
                </a>
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                    <i class="bi bi-eye"></i> Details
                </a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi bi-trash"></i>Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
