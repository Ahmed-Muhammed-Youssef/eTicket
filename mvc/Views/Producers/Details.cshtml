@model Producer
@{
    ViewData["Title"] = "Details";
}

<p class="form-group text-center">
    <h2>
        @Model.FullName 's Details
    </h2>
</p>
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center my-2">
                    <img class="rounded-circle" style="max-width: 150px;" src=@Model.ProfilePictureUrl />
                </div>
                <div class="form-group my-2">
                    <label asp-for="ProfilePictureUrl" class="control-label">
                    </label>
                    <input asp-for="ProfilePictureUrl" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <label asp-for="FullName" class="control-label">
                    </label>
                    <input asp-for="FullName" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Bio" class="control-label">
                    </label>
                    <input asp-for="Bio" class="form-control" readonly />
                </div>
                <div class="form-group my-2">
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
