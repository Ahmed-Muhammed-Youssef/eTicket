<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTicket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/node_modules/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Movies" asp-action="Index">eTicket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index">
                                <i class="bi-film me-1"></i>Movies
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#"
                            role="button" data-toggle="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Management
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Cinemas" asp-action="Index">
                                    <i class="bi bi-camera-reels me-1"></i>Cinemas
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Actors" asp-action="Index">
                                    <i class="bi bi-person-square me-1"></i>Actors
                                </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Producers" asp-action="Index">
                                    <i class="bi bi-headset me-1"></i>Producers
                                </a>
                            </div>
                        </li>
                    </ul>
                    <form class="input-group my-2 my-lg-0" style="width: 300px; padding-right: 25px;" asp-controller="Movies" asp-action="Filter">
                        <input name="searchString" type="text" class="form-control"
                        placeholder="Search for a movie..."/>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("CartSummary")
                    </ul>
                    <a class="btn btn-outline-success my-2 my-sm-0" 
                        asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i>Login
                    </a>
                    @*user login section*@
                    <ul class="navbar-nav ms-3">
                        <li class="nav-item dropdown">
                            <button class="nav-link dropdown-toggle btn btn-outline-success" href="#"
                                role="button" data-toggle="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-badge me-1"></i> @UserPlaceHolder.Email
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Orders" asp-action="List">
                                    <i class="bi bi-list me-1"></i>Orders
                                </a>
                            </div>
                        </li>
                    </ul>
                    <div>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - eTicket
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
